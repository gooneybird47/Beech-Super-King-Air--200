<?xml version="1.0"?>
<PropertyList>
	<!-- Position ALS Navigation Lights -->
	<model>
		<name>nav-right</name>
		<path>AI/Lights/procedural_light_nav_right.xml</path>
		<offsets>
			<x-m>-0.5676</x-m>
			<y-m>8.3139</y-m>
			<z-m>1.966</z-m>
		</offsets>
	</model>
	<model>
		<name>nav-left</name>
		<path>AI/Lights/procedural_light_nav_left.xml</path>
		<offsets>
			<x-m>-0.5676</x-m>
			<y-m>-8.3139</y-m>
			<z-m>1.966</z-m>
		</offsets>
	</model>
	<model>
		<name>nav-tail</name>
		<path>AI/Lights/procedural_light_nav_tail.xml</path>
		<offsets>
			<x-m>8.3668</x-m>
			<y-m>0.0</y-m>
			<z-m>4.4295</z-m>
		</offsets>
	</model>
	<!-- Position ALS Strobes -->
	<model>
		<name>strobe-right</name>
		<path>AI/Lights/procedural_light_strobe_right.xml</path>
		<offsets>
			<x-m>-0.5281</x-m>
			<y-m>8.3139</y-m>
			<z-m>1.966</z-m>
		</offsets>
	</model>
	<model>
		<name>strobe-left</name>
		<path>AI/Lights/procedural_light_strobe_left.xml</path>
		<offsets>
			<x-m>-0.5281</x-m>
			<y-m>-8.3139</y-m>
			<z-m>1.966</z-m>
		</offsets>
	</model>
	<model>
		<name>strobe-tail</name>
		<path>AI/Lights/procedural_light_strobe_tail.xml</path>
		<offsets>
			<x-m>8.3668</x-m>
			<y-m>0.0</y-m>
			<z-m>4.4295</z-m>
		</offsets>
	</model>
	<!-- Position Beacons -->
	<model>
		<name>beacon-top</name>
		<path>AI/Lights/procedural_light_beacon_top.xml</path>
		<offsets>
			<x-m>7.0779</x-m>
			<y-m>0.0</y-m>
			<z-m>4.5728</z-m>
		</offsets>
	</model>
	<model>
		<name>beacon-bottom</name>
		<path>AI/Lights/procedural_light_beacon_bottom.xml</path>
		<offsets>
			<x-m>1.205</x-m>
			<y-m>0.0</y-m>
			<z-m>0.9883</z-m>
		</offsets>
	</model>
	<!--     Taxi Lights -->
	<model>
		<name>left-taxi</name>
		<path>AI/Lights/procedural_light_nav_tail.xml</path>
		<offsets>
			<x-m>-4.4654</x-m>
			<y-m>-0.0934</y-m>
			<z-m>1.0444</z-m>
		</offsets>
	</model>
	<model>
		<name>right-taxi</name>
		<path>AI/Lights/procedural_light_nav_tail.xml</path>
		<offsets>
			<x-m>-4.4654</x-m>
			<y-m>0.0934</y-m>
			<z-m>1.0444</z-m>
		</offsets>
	</model>
	<model>
		<name>lower-taxi</name>
		<path>AI/Lights/procedural_light_nav_tail.xml</path>
		<offsets>
			<x-m>-4.491</x-m>
			<y-m>0.0</y-m>
			<z-m>0.9559</z-m>
		</offsets>
	</model>
	<animation>
		<name>taxiGrouped</name>
		<object-name>left-taxi</object-name>
		<object-name>right-taxi</object-name>
		<object-name>lower-taxi</object-name>
	</animation>
	<animation>
		<type>select</type>
		<object-name>taxiGrouped</object-name>
		<nopreview/>
		<condition>
			<and>
				<greater-than>
					<property>velocities/true-airspeed-kt</property>
					<value>0</value>
				</greater-than>
				<less-than>
					<property>velocities/true-airspeed-kt</property>
					<value>128</value>
				</less-than>
			</and>
		</condition>
	</animation>
	<!-- Group Lights for Shared Animations -->
	<animation>
		<name>StaticGrouped</name>
		<object-name>nav-right</object-name>
		<object-name>nav-left</object-name>
		<object-name>nav-tail</object-name>
	</animation>
	<animation>
		<name>StrobeGrouped</name>
		<object-name>strobe-right</object-name>
		<object-name>strobe-left</object-name>
		<object-name>strobe-tail</object-name>
	</animation>
	<animation>
		<name>BeaconGrouped</name>
		<object-name>beacon-top</object-name>
		<object-name>beacon-bottom</object-name>
	</animation>
	<!-- Show Static Lights & Beacons when aircraft is moving -->
	<animation>
		<type>select</type>
		<object-name>StaticGrouped</object-name>
		<object-name>BeaconGrouped</object-name>
		<nopreview/>
		<condition>
			<or>
				<greater-than>
					<property>transponder-id</property>
					<value type="string">0</value>
				</greater-than>
				<greater-than>
					<property>velocities/true-airspeed-kt</property>
					<value>0</value>
				</greater-than>
			</or>
		</condition>
	</animation>
	<!-- Show Strobes when Aircraft on runway or airborne -->
	<animation>
		<type>select</type>
		<object-name>StrobeGrouped</object-name>
		<nopreview/>
		<condition>
			<greater-than>
				<property>velocities/true-airspeed-kt</property>
				<value>40</value>
			</greater-than>
		</condition>
	</animation>
</PropertyList>